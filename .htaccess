# mod_rewrite starts here
RewriteEngine On

# does not apply to existing directories, meaning that if the folder exist on the server then don't
# change anything and don't run the Rule!
RewriteCond %{REQUEST_FILENAME} !-d

# Check the file in directory with .html extension
RewriteCond %{REQUEST_FILENAME}\.html !-f

# Here we actually show the page that has the .html extenstion
RewriteRule ^(.*)$ $1.html [NC,L]